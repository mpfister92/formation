	<route url="/admin/news-delete-([0-9]+)\.html" rewrite="/admin/news-delete-(id).html" module="News" action="delete" vars="id"></route>
	<route url="/admin/comment-update-([0-9]+)\.html" rewrite="/admin/comment-update-(id).html" module="News" action="updateComment" vars="id"></route>
	<route url="/admin/comment-delete-([0-9]+)\.html" rewrite="/admin/comment-delete-(id).html" module="News" action="deleteComment" vars="id"></route>
	<route url="/admin/index\.html" rewrite="/admin/index.html" module="Connexion" action="index"></route>
	<route url="/admin/deconnexion\.html" rewrite="/admin/deconnexion.html" module="Connexion" action="deconnexion"></route>
</routes>